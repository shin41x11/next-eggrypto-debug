generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// BlockChainMonsters
model BCMonsters {
  monsterId        Int      @id @default(autoincrement()) @db.UnsignedInt
  name             String   @db.VarChar(63)
  supplyLimit      Int      @db.UnsignedInt
  SupplyCount      Int      @db.UnsignedInt
  updatedAt        DateTime @default(now()) @updatedAt() @db.Timestamp(0)
}

// BCMints
model BCMints {
  id        Int      @id @default(autoincrement()) @db.UnsignedInt // ID
  tokenId   Int      @db.UnsignedInt // トークンID
  monsterId Int      @db.UnsignedInt // モンスターID
  createdAt DateTime @default(now()) @db.Timestamp(0)
}

model BCLoads{
  id        Int      @id @default(autoincrement()) @db.UnsignedInt // ID
  envType Int      @db.UnsignedInt // 環境タイプ(1: メインネット, 2: テストネット)
  loadType  Int   @db.UnsignedInt // 読み込みタイプ(1: モンスター, 2: ミント)
  lastBlockNumber String   @db.VarChar(63) // 最終ブロック番号(BCMints向け)
  beginAt DateTime @default(now()) @db.Timestamp(0)
  endAt    DateTime @default(now()) @db.Timestamp(0)
}

